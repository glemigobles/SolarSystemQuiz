<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.kubaczeremosz.solarsystemquiz.Main">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryGrey"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/welcome_in_solar_system_quiz"
        android:textColor="#EDAA19"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="10dp"

        android:text="@string/challenge_your_knowledge_about_solar_system"
        android:textColor="#ffff"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/sun2" />


    <EditText
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:hint="@string/put_your_name_here"
        android:textColor="@color/colorAccent"
        android:textColorHint="#FFEFCC"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#000"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:background="#1D961D"
            android:gravity="center"
            android:shadowColor="@color/colorAccentLight"
            android:text="@string/start"
            android:textColor="@color/colorAccentLight"
            android:textSize="18sp"

            />

    </LinearLayout>

</LinearLayout>
